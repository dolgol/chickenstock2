package semitest;

	import static org.springframework.test.web.servlet.result.MockMvcResultMatchers.request;

import java.io.*;
	import java.util.*;

import javax.servlet.http.HttpServletRequest;

import org.apache.catalina.filters.SetCharacterEncodingFilter;

	public class controller {
	    public static void main(String[] args) {
	    	
	    	setConsoleEncodingToUTF8();
	    	
	        controller csvReader = new controller();
	        List<List<String>> csvList = csvReader.readCSV();
	        printCSVList(csvList); // csvList 출력
	    }

	    public List<List<String>> readCSV() {
	        List<List<String>> csvList = new ArrayList<List<String>>();
	        File csv = new File("D:\\SpringFrameWorkSamples\\semitest\\korstocks.csv");
	        BufferedReader br = null;
	        String line = "";

	        try {
	            br = new BufferedReader(new FileReader(csv));
	            while ((line = br.readLine()) != null) { // readLine()은 파일에서 개행된 한 줄의 데이터를 읽어온다.
	                List<String> aLine = new ArrayList<String>();
	                String[] lineArr = line.split(","); // 파일의 한 줄을 ,로 나누어 배열에 저장 후 리스트로 변환한다.
	                aLine = Arrays.asList(lineArr);
	                csvList.add(aLine);
	            }
	        } catch (FileNotFoundException e) {
	            e.printStackTrace();
	        } catch (IOException e) {
	            e.printStackTrace();
	        } finally {
	            try {
	                if (br != null) { 
	                    br.close(); // 사용 후 BufferedReader를 닫아준다.
	                }
	            } catch(IOException e) {
	                e.printStackTrace();
	            }
	        }
	        return csvList;
	    }
	    
	    public static void printCSVList(List<List<String>> csvList) {
	        for (List<String> row : csvList) {
	            for (String element : row) {
	                System.out.print(element + " ");
	            }
	            System.out.println();
	        }
	    
	    }
	}
